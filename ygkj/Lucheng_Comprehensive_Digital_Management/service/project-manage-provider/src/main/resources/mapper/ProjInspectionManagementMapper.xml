<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.water.project.mapper.ProjInspectionManagementMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.project.model.ProjInspectionManagement" >
        <result column="id" property="id" />
        <result column="project_code" property="projectCode" />
        <result column="file_name" property="fileName" />
        <result column="file_url" property="fileUrl" />
        <result column="type" property="type" />
        <result column="upload_time" property="uploadTime" />
        <result column="upload_name" property="uploadName" />
        <result column="upload_id" property="uploadId" />
        <result column="remark" property="remark" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <sql id="Base_Column_List">
        id,
        project_code,
        file_name,
        file_url,
        type,
        upload_time,
        upload_name,
        upload_id,
        remark,
        status,
        del_flag
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.ygkj.project.model.ProjInspectionManagement">
        INSERT INTO proj_inspection_management
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                id,
            </if>
            <if test ='null != dismissedSuggestion'>
                dismissed_suggestion,
            </if>
            <if test ='null != projectCode'>
                project_code,
            </if>
            <if test ='null != fileName'>
                file_name,
            </if>
            <if test ='null != fileUrl'>
                file_url,
            </if>
            <if test ='null != type'>
                type,
            </if>
            <if test ='null != uploadTime'>
                upload_time,
            </if>
            <if test ='null != uploadName'>
                upload_name,
            </if>
            <if test ='null != uploadId'>
                upload_id,
            </if>
            <if test ='null != remark'>
                remark,
            </if>
            <if test ='null != status'>
                status,
            </if>
            <if test ='null != delFlag'>
                del_flag
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                #{id},
            </if>
            <if test ='null != dismissedSuggestion'>
                #{dismissedSuggestion},
            </if>
            <if test ='null != projectCode'>
                #{projectCode},
            </if>
            <if test ='null != fileName'>
                #{fileName},
            </if>
            <if test ='null != fileUrl'>
                #{fileUrl},
            </if>
            <if test ='null != type'>
                #{type},
            </if>
            <if test ='null != uploadTime'>
                #{uploadTime},
            </if>
            <if test ='null != uploadName'>
                #{uploadName},
            </if>
            <if test ='null != uploadId'>
                #{uploadId},
            </if>
            <if test ='null != remark'>
                #{remark},
            </if>
            <if test ='null != status'>
                #{status},
            </if>
            <if test ='null != delFlag'>
                #{delFlag}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        update proj_inspection_management set del_flag = 1 WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.project.model.ProjInspectionManagement">
        UPDATE proj_inspection_management
        <set>
            <if test ='null != projectCode'>project_code = #{projectCode},</if>
            <if test ='null != fileName'>file_name = #{fileName},</if>
            <if test ='null != fileUrl'>file_url = #{fileUrl},</if>
            <if test ='null != type'>type = #{type},</if>
            <if test ='null != uploadTime'>upload_time = #{uploadTime},</if>
            <if test ='null != uploadName'>upload_name = #{uploadName},</if>
            <if test ='null != uploadId'>upload_id = #{uploadId},</if>
            <if test ='null != remark'>remark = #{remark},</if>
            <if test ='null != status'>status = #{status},</if>
            <if test ='null != dismissedSuggestion'>dismissed_suggestion = #{dismissedSuggestion},</if>
            <if test ='null != delFlag'>del_flag = #{delFlag}</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="loadPage" resultType="com.ygkj.project.vo.response.ProjInspectionManagementRespVo">
        SELECT tbl.*,tb2.project_name from proj_inspection_management tbl
            LEFT JOIN att_project tb2 ON tbl.project_code = tb2.project_id WHERE tbl.del_flag = 0
        <if test="null != id and '' != id">
            and tbl.id = #{id}
        </if>
        <if test="null != projectCode and '' != projectCode">
            and FIND_IN_SET(#{projectCode} , tbl.project_code)
        </if>
        <if test="null != uploadTime and '' != uploadTime">
            and DATE_FORMAT(tbl.upload_time, '%Y-%m-%d') = #{uploadTime}
        </if>
        <if test="null != fileName and '' != fileName">
            and tbl.file_name like concat('%',#{fileName},'%')
        </if>
        <if test="null != status and '' != status">
            and tbl.status = #{status}
        </if>
        <if test="null != type and '' != type">
            and tbl.type = #{type}
        </if>
        <choose>
            <when test="constructPersonFlag">
                AND (FIND_IN_SET(`status`,'1,0,3') or (`status` = '2' AND upload_id = #{uploadId}))
            </when>
            <otherwise>
                AND upload_id = #{uploadId}
            </otherwise>
        </choose>
        order by tbl.status desc,tbl.upload_time desc
    </select>

</mapper>