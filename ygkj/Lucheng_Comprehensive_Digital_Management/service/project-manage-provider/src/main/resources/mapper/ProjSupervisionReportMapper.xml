<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.water.project.mapper.ProjSupervisionReportMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.project.model.ProjSupervisionReport" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="year" property="year" />
        <result column="month" property="month" />
        <result column="file_url" property="fileUrl" />
        <result column="remark" property="remark" />
        <result column="project_code" property="projectCode" />
        <result column="upload_time" property="uploadTime" />
        <result column="upload_id" property="uploadId" />
        <result column="upload_name" property="uploadName" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <sql id="Base_Column_List">
        id,
                name,
                year,
                month,
                file_url,
                remark,
                project_code,
                upload_time,
                upload_id,
                upload_name,
                del_flag
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.ygkj.project.model.ProjSupervisionReport">
        INSERT INTO proj_supervision_report
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                id,
            </if>
            <if test ='null != name'>
                name,
            </if>
            <if test ='null != year'>
                year,
            </if>
            <if test ='null != month'>
                month,
            </if>
            <if test ='null != fileUrl'>
                file_url,
            </if>
            <if test ='null != remark'>
                remark,
            </if>
            <if test ='null != projectCode'>
                project_code,
            </if>
            <if test ='null != uploadTime'>
                upload_time,
            </if>
            <if test ='null != uploadId'>
                upload_id,
            </if>
            <if test ='null != uploadName'>
                upload_name,
            </if>
            <if test ='null != type and "" != type'>
                type,
            </if>
            <if test ='null != delFlag'>
                del_flag
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                #{id},
            </if>
            <if test ='null != name'>
                #{name},
            </if>
            <if test ='null != year'>
                #{year},
            </if>
            <if test ='null != month'>
                #{month},
            </if>
            <if test ='null != fileUrl'>
                #{fileUrl},
            </if>
            <if test ='null != remark'>
                #{remark},
            </if>
            <if test ='null != projectCode'>
                #{projectCode},
            </if>
            <if test ='null != uploadTime'>
                #{uploadTime},
            </if>
            <if test ='null != uploadId'>
                #{uploadId},
            </if>
            <if test ='null != uploadName'>
                #{uploadName},
            </if>
            <if test ='null != type and "" != type'>
                #{type},
            </if>
            <if test ='null != delFlag'>
                #{delFlag}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        update proj_supervision_report set del_flag = 1 WHERE id = #{id}
    </delete>

    <select id="loadPage" resultType="com.ygkj.project.vo.response.ProjSupervisionReportRespVo">
        SELECT tbl.*,tb2.project_name from proj_supervision_report tbl
        LEFT JOIN att_project tb2 ON tbl.project_code = tb2.project_id WHERE tbl.del_flag = 0
        <if test="null != id and '' != id">
            and tbl.id = #{id}
        </if>
        <if test="null != projectCode and '' != projectCode">
            and tbl.project_code = #{projectCode}
        </if>
        <if test="null != uploadTime and '' != uploadTime">
            and DATE_FORMAT(tbl.upload_time, '%Y-%m-%d') = #{uploadTime}
        </if>
        <if test="null != name and '' != name">
            and tbl.name like concat('%',#{name},'%')
        </if>
        <if test="null != uploadId and '' != uploadId">
            and tbl.upload_id = #{uploadId}
        </if>
        <if test="null != year and '' != year">
            and tbl.year = #{year}
        </if>
        <if test="null != month and '' != month">
            and tbl.month = #{month}
        </if>
        <if test="null != type and '' != type">
            and tbl.type = #{type}
        </if>
        order by tbl.upload_time desc
    </select>

    <update id="update" parameterType="com.ygkj.project.model.ProjSupervisionReport">
        UPDATE proj_supervision_report
        <set>
            <if test ='null != name'>name = #{name},</if>
            <if test ='null != year'>year = #{year},</if>
            <if test ='null != month'>month = #{month},</if>
            <if test ='null != fileUrl'>file_url = #{fileUrl},</if>
            <if test ='null != remark'>remark = #{remark},</if>
            <if test ='null != projectCode'>project_code = #{projectCode},</if>
            <if test ='null != uploadTime'>upload_time = #{uploadTime},</if>
            <if test ='null != uploadId'>upload_id = #{uploadId},</if>
            <if test ='null != uploadName'>upload_name = #{uploadName},</if>
            <if test ='null != type'>type = #{type},</if>
            <if test ='null != delFlag'>del_flag = #{delFlag}</if>
        </set>
        WHERE id = #{id}
    </update>


</mapper>