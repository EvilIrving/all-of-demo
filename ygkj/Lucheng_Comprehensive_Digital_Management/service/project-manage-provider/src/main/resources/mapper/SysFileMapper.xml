<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.water.project.mapper.SysFileMapper">


    <select id="listFile" resultType="com.ygkj.project.model.SysFile">
        SELECT * FROM sys_file WHERE id IN
        <foreach collection="list" open="(" item="item" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="load" resultType="com.ygkj.project.model.SysFile">
        SELECT * FROM sys_file WHERE id = #{id}
    </select>
</mapper>