<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.water.project.mapper.AttHydrDiagBaseMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.gragh.model.AttHydrDiagBase" >
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="code_type" property="codeType" />
        <result column="bas" property="bas" />
    </resultMap>

    <sql id="Base_Column_List">
        name,
                code,
                code_type,
                bas,
                px
    </sql>

    <insert id="insert" parameterType="com.ygkj.gragh.model.AttHydrDiagBase">
        INSERT INTO att_hydr_diag_base
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != name'>
                name,
            </if>
            <if test ='null != code'>
                code,
            </if>
            <if test ='null != codeType'>
                code_type,
            </if>
            <if test ='null != bas'>
                bas
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != name'>
                #{name},
            </if>
            <if test ='null != code'>
                #{code},
            </if>
            <if test ='null != codeType'>
                #{codeType},
            </if>
            <if test ='null != bas'>
                #{bas}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        DELETE FROM att_hydr_diag_base
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.gragh.model.AttHydrDiagBase">
        UPDATE att_hydr_diag_base
        <set>
            <if test ='null != name'>name = #{name},</if>
            <if test ='null != code'>code = #{code},</if>
            <if test ='null != codeType'>code_type = #{codeType},</if>
            <if test ='null != bas'>bas = #{bas}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM att_hydr_diag_base
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM att_hydr_diag_base
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM att_hydr_diag_base
    </select>


    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM att_hydr_diag_base
        <where>
            <if test="name!=null and name!=''">
                and name=#{name}
            </if>
            <if test="code!=null and code!=''">
                and code=#{code}
            </if>
            <if test="bas!=null and bas!=''">
                and bas=#{bas}
            </if>
        </where>
    </select>

</mapper>