<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.water.project.mapper.MoRegularMonitorMapper">



    <select id="selectRegularMonitorList" resultType="com.ygkj.project.vo.request.MoRegularMonitorVo">
        SELECT * FROM mo_regular_monitor
        <where>
            <if test="reqVo.name != null and reqVo.name != ''">
                and CONCAT('monitor_unit','manager') LIKE CONCAT('%',#{reqVo.name},'%')
            </if>
            <if test="true">
                and del_flag = 0
            </if>
        </where>
        order by create_time desc
    </select>

</mapper>