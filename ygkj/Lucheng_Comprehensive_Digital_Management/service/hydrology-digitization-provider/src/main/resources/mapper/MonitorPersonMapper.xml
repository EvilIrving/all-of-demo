<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.digitization.mapper.MonitorPersonMapper">
    <resultMap id="BaseResultMap" type="com.ygkj.digitization.model.MonitorPerson" >
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="person_type" property="personType" />
        <result column="create_time" property="createTime" />
        <result column="create_id" property="createId" />
        <result column="update_time" property="updateTime" />
        <result column="update_id" property="updateId" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <sql id="Base_Column_List">
                id,
                user_id,
                username,
                person_type,
                create_time,
                create_id,
                update_time,
                update_id,
                del_flag
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.ygkj.digitization.model.MonitorPerson">
        INSERT INTO monitor_person
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != userId'>
                user_id,
            </if>
            <if test ='null != username'>
                username,
            </if>
            <if test ='null != personType'>
                person_type,
            </if>
            <if test ='null != createTime'>
                create_time,
            </if>
            <if test ='null != createId'>
                create_id,
            </if>
            <if test ='null != updateTime'>
                update_time,
            </if>
            <if test ='null != updateId'>
                update_id,
            </if>
            <if test ='null != delFlag'>
                del_flag
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != userId'>
                #{userId},
            </if>
            <if test ='null != username'>
                #{username},
            </if>
            <if test ='null != personType'>
                #{personType},
            </if>
            <if test ='null != createTime'>
                #{createTime},
            </if>
            <if test ='null != createId'>
                #{createId},
            </if>
            <if test ='null != updateTime'>
                #{updateTime},
            </if>
            <if test ='null != updateId'>
                #{updateId},
            </if>
            <if test ='null != delFlag'>
                #{delFlag}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        DELETE FROM monitor_person
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.digitization.model.MonitorPerson">
        UPDATE monitor_person
        <set>
            <if test ='null != userId'>user_id = #{userId},</if>
            <if test ='null != username'>username = #{username},</if>
            <if test ='null != personType'>person_type = #{personType},</if>
            <if test ='null != createTime'>create_time = #{createTime},</if>
            <if test ='null != createId'>create_id = #{createId},</if>
            <if test ='null != updateTime'>update_time = #{updateTime},</if>
            <if test ='null != updateId'>update_id = #{updateId},</if>
            <if test ='null != delFlag'>del_flag = #{delFlag}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM monitor_person
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM monitor_person
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM monitor_person
    </select>

    <select id="selectByPersonTypeAndUsername" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM monitor_person
        <where>
            <if test="true">
                AND del_flag=0
            </if>
            <if test="personType != null">
                AND person_type=#{personType}
            </if>
            <if test="userName != null">
                AND username LIKE CONCAT('%',CONCAT(#{userName},'%'))
            </if>
        </where>
        order by id desc
    </select>

    <update id="deleteManyByUserIdList" parameterType="java.util.List">
        <if test="userIdList !=null and userIdList.size!=0">
            update monitor_person set del_flag=1 where user_id in
            <foreach collection="userIdList" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>
    </update>

    <select id="selectAllUserId" resultType="string">
        SELECT DISTINCT user_id
        FROM monitor_person
        WHERE del_flag=0
    </select>

    <update id="updatePersonTypeByUserId">
        <if test="userIdList !=null and userIdList.size!=0">
            update monitor_person set person_type=#{personType} where del_flag=0
            and user_id in
            <foreach collection="userIdList" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>
    </update>

</mapper>