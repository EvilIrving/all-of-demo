<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.big.screen.mapper.BsUnitDataMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.big.screen.model.BsUnitData">
        <result column="data_id" property="dataId"/>
        <result column="data_value" property="dataValue"/>
    </resultMap>

    <sql id="Base_Column_List">
        data_id,
        data_value
    </sql>

    <insert id="insert" parameterType="com.ygkj.big.screen.model.BsUnitData">
        INSERT INTO lc_meta_db.bs_unit_data
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != dataId'>
                data_id,
            </if>
            <if test='null != dataValue'>
                data_value
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != dataId'>
                #{dataId},
            </if>
            <if test='null != dataValue'>
                #{dataValue}
            </if>
        </trim>
    </insert>

    <delete id="delete">
        DELETE FROM bs_unit_data
        WHERE data_id = #{dataId}
    </delete>

    <update id="update" parameterType="com.ygkj.big.screen.model.BsUnitData">
        UPDATE lc_meta_db.bs_unit_data
        <set>
            <if test='null != dataId'>data_id = #{dataId},</if>
            <if test='null != dataValue'>data_value = #{dataValue}</if>
        </set>
        WHERE data_id = #{dataId}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bs_unit_data
        WHERE data_id = #{dataId}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bs_unit_data
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM bs_unit_data
    </select>

</mapper>