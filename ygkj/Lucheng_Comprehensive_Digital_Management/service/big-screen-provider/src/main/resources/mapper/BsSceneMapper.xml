<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.big.screen.mapper.BsSceneMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.big.screen.model.BsScene">
        <result column="id" property="id"/>
        <result column="scene_name" property="sceneName"/>
        <result column="bs_name" property="bsName"/>
        <result column="defaulted" property="defaulted"/>
        <result column="editable" property="editable"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        scene_name,
        bs_name,
        defaulted,
        editable
    </sql>

    <insert id="insert" parameterType="com.ygkj.big.screen.model.BsScene">
        INSERT INTO lc_meta_db.bs_scene
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                id,
            </if>
            <if test='null != sceneName'>
                scene_name,
            </if>
            <if test='null != bsName'>
                bs_name,
            </if>
            <if test='null != defaulted'>
                defaulted,
            </if>
            <if test='null != editable'>
                editable,
            </if>
            <if test='null != mode'>
                mode,
            </if>
            <if test='null != userId'>
                user_id
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                #{id},
            </if>
            <if test='null != sceneName'>
                #{sceneName},
            </if>
            <if test='null != bsName'>
                #{bsName},
            </if>
            <if test='null != defaulted'>
                #{defaulted},
            </if>
            <if test='null != editable'>
                #{editable},
            </if>
            <if test='null != mode'>
                #{mode},
            </if>
            <if test='null != userId'>
                #{userId}
            </if>
        </trim>
    </insert>

    <delete id="delete">
        DELETE FROM lc_meta_db.bs_scene
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.big.screen.model.BsScene">
        UPDATE lc_meta_db.bs_scene
        <set>
            <if test='null != sceneName'>scene_name = #{sceneName},</if>
            <if test='null != bsName'>bs_name = #{bsName},</if>
            <if test='null != defaulted'>defaulted = #{defaulted},</if>
            <if test='null != editable'>editable = #{editable},</if>
            <if test='null != mode'>mode = #{mode},</if>
            <if test='null != userId'>user_id = #{userId}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM lc_meta_db.bs_scene
        WHERE FIND_IN_SET(id,#{id})
    </select>

    <select id="customScene" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM lc_meta_db.bs_scene
        WHERE editable = 1
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bs_scene
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM bs_scene
    </select>

    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bs_scene
        <where>
            <if test="bsName !=null and bsName!=''">
                and bs_name=#{bsName}
            </if>
            <if test="sceneName !=null and sceneName!=''">
                and scene_name=#{sceneName}
            </if>
            <if test="mode !=null">
                and mode=#{mode}
            </if>
            <if test="userId !=null">
                and user_id=#{userId}
            </if>
            <if test="defaulted !=null">
                and defaulted=#{defaulted}
            </if>
        </where>
        order by defaulted desc,id asc
    </select>

    <insert id="replaceSceneDefault">
        REPLACE INTO lc_meta_db.bs_scene_default
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != userId'>
                user_id,
            </if>
            <if test='null != bsName'>
                bs_name,
            </if>
            <if test='null != sceneId'>
                scene_id
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != userId'>
                #{userId},
            </if>
            <if test='null != bsName'>
                #{bsName},
            </if>
            <if test='null != sceneId'>
                #{sceneId}
            </if>
        </trim>
    </insert>

    <select id="loadDefaultSenceId" resultType="string">
        select scene_id from bs_scene_default
        <where>
            <if test='null != userId'>
                AND user_id=#{userId}
            </if>
            <if test='null != bsName'>
                AND bs_name=#{bsName}
            </if>
        </where>
        limit 1
    </select>
</mapper>