<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ygkj.big.screen.mapper.SectionModelDataMapper">
    <select id="getForecastWaterLevelData" resultType="com.alibaba.fastjson.JSONObject">
        select hour as tm,depth as waterLevel from section_model_data
        <where>
            <if test="id !=null and ''!=id">
                and sectionId = #{id}
            </if>
            <if test="startTime != null">
                and hour &gt;=#{startTime}
            </if>
            <if test="endTime != null">
                and hour &lt;=#{endTime}
            </if>
        </where>
        order by hour
    </select>
</mapper>