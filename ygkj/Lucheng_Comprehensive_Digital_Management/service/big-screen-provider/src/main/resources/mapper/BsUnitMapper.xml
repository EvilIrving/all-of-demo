<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.big.screen.mapper.BsUnitMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.big.screen.model.BsUnit">
        <result column="id" property="id"/>
        <result column="unit_name" property="unitName"/>
        <result column="bs_name" property="bsName"/>
        <result column="unit_preview_url" property="unitPreviewUrl"/>
        <result column="unit_property" property="unitProperty"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        unit_name,
        bs_name,
        unit_preview_url,
        unit_property
    </sql>

    <insert id="insert" parameterType="com.ygkj.big.screen.model.BsUnit">
        INSERT INTO lc_meta_db.bs_unit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                id,
            </if>
            <if test='null != unitName'>
                unit_name,
            </if>
            <if test='null != bsName'>
                bs_name,
            </if>
            <if test='null != unitPreviewUrl'>
                unit_preview_url,
            </if>
            <if test='null != unitProperty'>
                unit_property
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                #{id},
            </if>
            <if test='null != unitName'>
                #{unitName},
            </if>
            <if test='null != bsName'>
                #{bsName},
            </if>
            <if test='null != unitPreviewUrl'>
                #{unitPreviewUrl},
            </if>
            <if test='null != unitProperty'>
                #{unitProperty}
            </if>
        </trim>
    </insert>

    <delete id="delete">
        DELETE FROM lc_meta_db.bs_unit
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.big.screen.model.BsUnit">
        UPDATE lc_meta_db.bs_unit
        <set>
            <if test='null != unitName'>unit_name = #{unitName},</if>
            <if test='null != bsName'>bs_name = #{bsName},</if>
            <if test='null != unitPreviewUrl'>unit_preview_url = #{unitPreviewUrl},</if>
            <if test='null != unitProperty'>unit_property = #{unitProperty}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bs_unit
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bs_unit
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM bs_unit
    </select>

    <select id="selectByCondition" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        FROM bs_unit
        <where>
            <if test="id!=null and id!=''">
                and find_in_set(id,#{id});
            </if>
            <if test="unitName !=null and unitName !=''">
                and unit_name like concat('%',#{unitName},'%')
            </if>
            <if test="bsName !=null and bsName !=''">
                and bs_name like concat('%',#{bsName},'%')
            </if>
        </where>
    </select>

    <select id="listIdByName" resultType="com.ygkj.big.screen.model.BsUnit">
        select id,unit_name
        from lc_meta_db.bs_unit
        <where>
            <if test="unitNames!=null and unitNames!=''">
                and find_in_set(unit_name,#{unitNames})
            </if>
        </where>
    </select>
</mapper>