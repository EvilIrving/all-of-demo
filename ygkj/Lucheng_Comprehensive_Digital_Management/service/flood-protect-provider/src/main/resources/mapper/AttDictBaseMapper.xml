<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.flood.mapper.AttDictBaseMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.flood.vo.response.AttDictResVo">
        <result column="id" property="id"/>
        <result column="dict_code" property="dictCode"/>
        <result column="dict_name" property="dictName"/>
        <result column="parent_id" property="parentId"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        dict_code,
        dict_name,
        parent_id
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id"
            parameterType="com.ygkj.flood.model.AttDictBase">
        INSERT INTO att_dict_base
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                id,
            </if>
            <if test='null != dictCode'>
                dict_code,
            </if>
            <if test='null != dictName'>
                dict_name,
            </if>
            <if test='null != parentId'>
                parent_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                #{id},
            </if>
            <if test='null != dictCode'>
                #{dictCode},
            </if>
            <if test='null != dictName'>
                #{dictName},
            </if>
            <if test='null != parentId'>
                #{parentId},
            </if>
        </trim>
    </insert>

    <delete id="delete">
        UPDATE att_dict_base SET del_flag = 1 WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.flood.model.AttDictBase">
        UPDATE att_dict_base
        <set>
            <if test='null != dictCode'>dict_code = #{dictCode},</if>
            <if test='null != dictName'>dict_name = #{dictName},</if>
            <if test='null != parentId'>parent_id = #{parentId},</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM att_dict_base
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM att_dict_base
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM att_dict_base
    </select>

    <select id="selectDict" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM att_dict_base
        WHERE del_flag = 0
        <if test="dictCode != null and dictCode != ''">
            AND dict_code = #{dictCode}
        </if>
        AND parent_id IS NOT NULL
    </select>


</mapper>