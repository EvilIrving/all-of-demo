<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.flood.mapper.CollectPointMapper">

    <select id="selectAllPoint" resultType="com.ygkj.flood.vo.response.CollectPointRainfall">
        select * from collect_point where del_flag=0
        <if test="userId!=null and userId!=''">
            and user_id=#{userId}
        </if>
        <if test="name!=null and name!=''">
            and point_name like concat('%',#{name},'%')
        </if>
    </select>
</mapper>