<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.gragh.mapper.UserCollectionMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.gragh.model.UserCollection">
        <result column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="create_time" property="createTime"/>
        <result column="create_id" property="createId"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_id" property="updateId"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        user_id,
        code,
        type,
        create_time,
        create_id,
        update_time,
        update_id,
        del_flag
    </sql>

    <insert id="insert" parameterType="com.ygkj.gragh.vo.request.UserCollectionAddVo">
        INSERT INTO user_collection
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                id,
            </if>
            <if test='null != userId'>
                user_id,
            </if>
            <if test='null != code'>
                code,
            </if>
            <if test='null != type'>
                type
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != id'>
                #{id},
            </if>
            <if test='null != userId'>
                #{userId},
            </if>
            <if test='null != code'>
                #{code},
            </if>
            <if test='null != type'>
                #{type}
            </if>
        </trim>
    </insert>

    <delete id="delete">
        UPDATE user_collection SET del_flag = 1 WHERE type = #{type} AND code = #{code}
        <if test="userId!=null and userId!=''">
            AND user_id = #{userId}
        </if>
    </delete>

    <update id="update" parameterType="com.ygkj.gragh.model.UserCollection">
        UPDATE user_collection
        <set>
            <if test='null != userId'>user_id = #{userId},</if>
            <if test='null != code'>code = #{code},</if>
            <if test='null != type'>type = #{type},</if>
            <if test='null != createTime'>create_time = #{createTime},</if>
            <if test='null != createId'>create_id = #{createId},</if>
            <if test='null != updateTime'>update_time = #{updateTime},</if>
            <if test='null != updateId'>update_id = #{updateId},</if>
            <if test='null != delFlag'>del_flag = #{delFlag}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_collection
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_collection
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM user_collection
    </select>

    <select id="selectByCondition" resultType="java.lang.String">
        SELECT DISTINCT(code) FROM user_collection
        WHERE del_flag = 0
        <if test=" userId != null and userId != '' ">
            AND user_id = #{userId}
        </if>
        <if test="type != null and type != ''">
            and type = #{type}
        </if>
    </select>


</mapper>