<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ygkj.gragh.mapper.SpaceWaterAreaMapper">

    <resultMap id="BaseResultMap" type="com.ygkj.gragh.model.SpaceWaterArea">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="area_point" property="areaPoint"/>
        <result column="center_latitude" property="centerLatitude"/>
        <result column="center_longitude" property="centerLongitude"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        name,
        area_point,
        center_latitude,
        center_longitude
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id"
            parameterType="com.ygkj.gragh.model.SpaceWaterArea">
        INSERT INTO space_water_area
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test='null != name'>
                name,
            </if>
            <if test='null != areaPoint'>
                area_point,
            </if>
            <if test='null != centerLatitude'>
                center_latitude,
            </if>
            <if test='null != centerLongitude'>
                center_longitude
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test='null != name'>
                #{name},
            </if>
            <if test='null != areaPoint'>
                #{areaPoint},
            </if>
            <if test='null != centerLatitude'>
                #{centerLatitude},
            </if>
            <if test='null != centerLongitude'>
                #{centerLongitude}
            </if>
        </trim>
    </insert>

    <delete id="delete">
        DELETE FROM space_water_area
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.ygkj.gragh.model.SpaceWaterArea">
        UPDATE space_water_area
        <set>
            <if test='null != name'>name = #{name},</if>
            <if test='null != areaPoint'>area_point = #{areaPoint},</if>
            <if test='null != centerLatitude'>center_latitude = #{centerLatitude},</if>
            <if test='null != centerLongitude'>center_longitude = #{centerLongitude}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM space_water_area
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM space_water_area
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM space_water_area
    </select>

    <select id="allWaterAreas" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM space_water_area
    </select>

</mapper>